{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"definitions": {
		"user": {
			"$id": "#user",
			"title": "User",
			"description": "Data to register a new user.",
			"type": "object",
			"properties": {
				"username": {
					"description": "User name",
					"type": "string"
				},
				"email": {
					"description": "Unique email address",
					"type": "string",
					"format": "email"
				},
				"password": {
					"description": "Password for registration",
					"type": "string",
					"minLength": 6
				},
				"signupcode": {
					"description": "Sign up code for users",
					"type": "string"
				}
			},
			"required": ["username", "email", "password", "signupcode"],
			"additionalProperties": false
		},

		"userUpdate": {
			"$id": "#userUpdate",
			"title": "User Update",
			"description": "Data a user can update (excludes username).",
			"type": "object",
			"properties": {
				"username": {
					"description": "Username of estate agent",
					"type": "string"
				},
				"email": {
					"description": "email of estate agent",
					"type": "string",
					"format": "email"
				},
				"role": {
					"description": "role of the registered user",
					"type": "string"
				},
				"password": {
					"description": "Unique email address",
					"type": "string"
				}
			},
			"additionalProperties": false
		}
	}
}